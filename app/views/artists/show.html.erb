<h1><%= @artist.name %></h1>
<%= image_tag @artist.image_path %><br />
<% @artist.songs.each do |song| %>
  <ul>
    <li><%= link_to song.title, song_path(song) %></li>
  </ul>
<% end %>

<%= link_to "View songs", artist_songs_path(@artist) %><br />

<%= link_to "Edit", edit_artist_path(@artist) %>
<%= link_to "Delete", artist_path(@artist), method: :delete %>
<%= link_to "New song", new_artist_song_path(@artist) %>
<%= link_to "All Artists", artists_path %>
